# Staging Environment Configuration for Ntsamaela

# Application Configuration
NODE_ENV=staging
PORT=3002
API_PORT=3002
WEB_PORT=3000

# Database Configuration
DATABASE_URL=postgresql://ntsamaela_admin:${DB_PASSWORD}@${DB_ENDPOINT}:5432/ntsamaela_staging
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://${REDIS_ENDPOINT}:6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=1
REDIS_CONNECTION_TIMEOUT=10000

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
ADMIN_JWT_SECRET=${ADMIN_JWT_SECRET}
ADMIN_JWT_EXPIRES_IN=8h

# AWS Configuration
AWS_REGION=${AWS_REGION}
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_S3_BUCKET_NAME=${S3_BUCKET_NAME}-staging
AWS_CLOUDFRONT_DOMAIN=${CLOUDFRONT_DOMAIN}

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
FROM_EMAIL=noreply@staging.ntsamaela.com
FROM_NAME=Ntsamaela Staging

# Security Configuration
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
CORS_ORIGIN=https://staging.ntsamaela.com,https://staging-admin.ntsamaela.com

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/ntsamaela/app.log

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
XRAY_DAEMON_ADDRESS=127.0.0.1:2000

# Performance Configuration
CACHE_TTL=1800
CACHE_MAX_SIZE=500
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf
UPLOAD_PATH=/tmp/uploads

# Socket.IO Configuration
SOCKET_IO_PORT=3003
SOCKET_IO_CORS_ORIGIN=https://staging.ntsamaela.com

# Payment Configuration (if applicable)
PAYMENT_GATEWAY_URL=${PAYMENT_GATEWAY_URL}
PAYMENT_GATEWAY_KEY=${PAYMENT_GATEWAY_KEY}
PAYMENT_GATEWAY_SECRET=${PAYMENT_GATEWAY_SECRET}

# External Services
GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER}

# Feature Flags
ENABLE_VERIFICATION=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3
