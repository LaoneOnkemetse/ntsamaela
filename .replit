modules = ["bash", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Admin"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Mobile App (Expo)"

[[workflows.workflow]]
name = "Web Admin"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/web-admin && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Mobile App (Expo)"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/mobile && EXPO_NO_DOTENV=1 npx expo start --port 8080 --clear"
waitForPort = 8080

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd apps/web-admin && npm run start"]
build = ["bash", "-c", "cd apps/web-admin && npm run build"]
