modules = ["bash", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Admin"

[[workflows.workflow]]
name = "Web Admin"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/web-admin && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
