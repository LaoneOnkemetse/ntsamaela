# ECR Lifecycle Policy
resource "aws_ecr_lifecycle_policy" "ntsamaela_api_policy" {
  repository = aws_ecr_repository.ntsamaela_api.name

  policy = jsonencode({
    rules = [
      {
        rulePriority = 1
        description  = "Keep last 10 images"
        selection = {
          tagStatus     = "tagged"
          tagPrefixList = ["v"]
          countType     = "imageCountMoreThan"
          countNumber   = 10
        }
        action = {
          type = "expire"
        }
      },
      {
        rulePriority = 2
        description  = "Delete untagged images older than 1 day"
        selection = {
          tagStatus   = "untagged"
          countType   = "sinceImagePushed"
          countUnit   = "days"
          countNumber = 1
        }
        action = {
          type = "expire"
        }
      }
    ]
  })
}

resource "aws_ecr_lifecycle_policy" "ntsamaela_web_policy" {
  repository = aws_ecr_repository.ntsamaela_web.name

  policy = jsonencode({
    rules = [
