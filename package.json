{
  "name": "ntsamaela",
  "version": "1.0.0",
  "description": "Ntsamaela - Hybrid Verification Delivery Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web-admin\" \"npm run dev:mobile\"",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web-admin": "cd apps/web-admin && npm run dev",
    "dev:mobile": "cd apps/mobile && npx expo start --port 8081",
    "build": "npm run build:api && npm run build:web-admin && npm run build:mobile",
    "build:api": "cd apps/api && npm run build",
    "build:web-admin": "cd apps/web-admin && npm run build",
    "build:mobile": "cd apps/mobile && npm run build",
    "build:mobile:android": "cd apps/mobile && npm run build:android",
    "build:mobile:ios": "cd apps/mobile && npm run build:ios",
    "start": "concurrently \"npm run start:api\" \"npm run start:web-admin\"",
    "start:api": "cd apps/api && npm run start",
    "start:web-admin": "cd apps/web-admin && npm run start",
    "clean": "npm run clean:node_modules && npm run clean:build",
    "clean:node_modules": "rimraf node_modules apps/*/node_modules packages/*/node_modules",
    "clean:build": "rimraf apps/*/dist apps/*/.next apps/*/build packages/*/dist",
    "lint": "npm run lint:api && npm run lint:web-admin && npm run lint:mobile && npm run lint:shared",
    "lint:api": "cd apps/api && npm run lint",
    "lint:web-admin": "cd apps/web-admin && npm run lint",
    "lint:mobile": "cd apps/mobile && npm run lint",
    "lint:shared": "cd packages/shared && npm run lint",
    "lint:fix": "npm run lint:fix:api && npm run lint:fix:web-admin && npm run lint:fix:mobile && npm run lint:fix:shared",
    "lint:fix:api": "cd apps/api && npm run lint:fix",
    "lint:fix:web-admin": "cd apps/web-admin && npm run lint:fix",
    "lint:fix:mobile": "cd apps/mobile && npm run lint:fix",
    "lint:fix:shared": "cd packages/shared && npm run lint:fix",
    "type-check": "npm run type-check:api && npm run type-check:web-admin && npm run type-check:mobile && npm run type-check:shared",
    "type-check:api": "cd apps/api && npm run type-check",
    "type-check:web-admin": "cd apps/web-admin && npm run type-check",
    "type-check:mobile": "cd apps/mobile && npm run type-check",
    "type-check:shared": "cd packages/shared && npm run type-check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:comprehensive": "cd apps/api && node scripts/test-coverage.js",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:api": "jest --selectProjects=API",
    "test:mobile": "jest --selectProjects=Mobile",
    "test:web-admin": "jest --selectProjects=Web Admin",
    "test:shared": "jest --selectProjects=Shared",
    "test:integration": "npm run test:integration:api && npm run test:integration:database",
    "test:integration:api": "jest --testPathPattern=integration --selectProjects=API",
    "test:integration:database": "jest --testPathPattern=integration --selectProjects=Database",
    "test:e2e": "npm run test:e2e:mobile && npm run test:e2e:web-admin",
    "test:e2e:mobile": "cd apps/mobile && npm run test:e2e",
    "test:e2e:web-admin": "cd apps/web-admin && npm run test:e2e",
    "test:performance": "npm run test:performance:api && npm run test:performance:web-admin",
    "test:performance:api": "cd apps/api && npm run test:performance",
    "test:performance:web-admin": "cd apps/web-admin && npm run test:performance",
    "test:smoke": "cd apps/api && npm run test:smoke",
    "test:security": "npm run security:audit && npm run security:scan",
    "security:audit": "npm audit --audit-level moderate",
    "security:scan": "npm run security:scan:dependencies && npm run security:scan:code",
    "security:scan:dependencies": "snyk test",
    "security:scan:code": "semgrep ci",
    "security:zap": "zap-baseline.py -t http://localhost:3001",
    "db:setup": "cd packages/database && npm run setup",
    "db:migrate": "cd packages/database && npm run migrate",
    "db:seed": "cd packages/database && npm run seed",
    "db:reset": "cd packages/database && npm run reset",
    "db:studio": "cd packages/database && npm run studio",
    "db:setup:test": "cd packages/database && npm run setup:test",
    "db:migrate:test": "cd packages/database && npm run migrate:test",
    "db:seed:test": "cd packages/database && npm run seed:test",
    "deploy:staging": "npm run deploy:api:staging && npm run deploy:web-admin:staging",
    "deploy:production": "npm run deploy:api:production && npm run deploy:web-admin:production",
    "deploy:api:staging": "cd apps/api && npm run deploy:staging",
    "deploy:api:production": "cd apps/api && npm run deploy:production",
    "deploy:web-admin:staging": "cd apps/web-admin && npm run deploy:staging",
    "deploy:web-admin:production": "cd apps/web-admin && npm run deploy:production",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "update:deps": "npm update && npm run update:workspaces",
    "update:workspaces": "npm update --workspaces",
    "check:updates": "npm outdated && npm run check:updates:workspaces",
    "check:updates:workspaces": "npm outdated --workspaces",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@babel/plugin-transform-export-namespace-from": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@types/aria-query": "^5.0.4",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.28.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.6",
    "@types/caseless": "^0.12.5",
    "@types/estree": "^1.0.8",
    "@types/express": "^5.0.3",
    "@types/express-serve-static-core": "^5.0.7",
    "@types/geojson": "^7946.0.16",
    "@types/hammerjs": "^2.0.46",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/http-errors": "^2.0.5",
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/jest": "^29.5.8",
    "@types/json-schema": "^7.0.15",
    "@types/json5": "^0.0.30",
    "@types/methods": "^1.1.4",
    "@types/mime": "^3.0.4",
    "@types/ms": "^2.1.0",
    "@types/node": "^20.8.0",
    "@types/prop-types": "^15.7.15",
    "@types/qs": "^6.14.0",
    "@types/range-parser": "^1.2.7",
    "@types/semver": "^7.7.1",
    "@types/send": "^0.17.5",
    "@types/serve-static": "^1.15.8",
    "@types/superagent": "^8.1.9",
    "@types/yargs": "^17.0.33",
    "@types/yargs-parser": "^21.0.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "babel-jest": "^30.1.2",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^8.2.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ntsamaela.git"
  },
  "keywords": [
    "delivery",
    "verification",
    "logistics",
    "mobile-app",
    "web-admin",
    "api",
    "typescript",
    "react-native",
    "nextjs",
    "postgresql",
    "prisma"
  ],
  "author": "Ntsamaela Team",
  "license": "MIT",
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.15.0",
    "@tanstack/react-query-devtools": "^4.41.0",
    "bcryptjs": "^3.0.2",
    "eslint": "^8.57.1",
    "next": "14.2.5",
    "nocache": "^4.0.0",
    "react-hook-form": "^7.65.0",
    "react-native-web": "^0.19.13",
    "yup": "^1.7.1"
  }
}
